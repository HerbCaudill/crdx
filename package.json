{
  "name": "crdx",
  "author": "HerbCaudill",
  "version": "0.1.5",
  "license": "MIT",
  "repository": "https://github.com/herbcaudill/crdx",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc ",
    "postbuild": "tscpaths -p tsconfig.json -s ./src -o ./dist --silent",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:log": "cross-env DEBUG='crdx*' DEBUG_COLORS=1 yarn test",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "@herbcaudill/crypto": "2",
    "@herbcaudill/random": "0",
    "cuid": "2",
    "debug": "4",
    "events": "3",
    "fast-memoize": "2",
    "lodash": "4"
  },
  "devDependencies": {
    "@herbcaudill/tscpaths": "0",
    "@types/debug": "4",
    "@types/jest": "27",
    "@types/lodash": "4",
    "cross-env": "6",
    "jest": "27",
    "ts-jest": "27",
    "typescript": "4"
  },
  "jest": {
    "transform": {},
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^/test/(.*)$": "<rootDir>/src/_test/$1",
      "^/(.*)$": "<rootDir>/src/$1"
    },
    "testEnvironment": "node"
  },
  "wallaby": {
    "autoDetect": true,
    "runMode": "onsave",
    "slowTestThreshold": 1000,
    "lowCoverageThreshold": 99,
    "hints": {
      "ignoreCoverageForFile": "ignore file coverage"
    },
    "env": {
      "type": "node",
      "params": {
        "runner": "--no-warnings --experimental-vm-modules"
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  }
}
